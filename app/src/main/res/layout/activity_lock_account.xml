<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".UI.SignupLogin.ForgetPassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="22dp">

            <ImageView
                android:layout_width="164dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="77dp"
                android:src="@mipmap/shoppre_logo" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21dp"
                android:src="@mipmap/account_lock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:text="Havenâ€™t Verified Your Profile Yet?"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="39dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Resend the verification email and click on the link in the mail to verify your account and resume using your account"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginHorizontal="39dp"
                android:layout_marginTop="26dp"
                android:backgroundTint="#F3F6F9"
                android:elevation="0dp"
                app:cardElevation="0dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/email"
                    android:gravity="center"
                    android:textColor="#676767"
                    android:textSize="12sp"
                    android:textFontWeight="500"/>
            </com.google.android.material.card.MaterialCardView>


            <Button
                android:id="@+id/verificationLinkBtn"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="30dp"
                android:layout_marginTop="26dp"

                android:backgroundTint="@color/button_blue"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:letterSpacing="0.03"
                android:text="Resend Verification Email"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="14sp"
                app:cornerRadius="5dp">

            </Button>

        </LinearLayout>
    </ScrollView>

</LinearLayout>