<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <TextView

                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="29dp"
                android:text="Add Address"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/closeBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_marginTop="26dp"
                android:layout_marginRight="27dp"
                android:src="@drawable/cross" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="64dp"
                android:layout_marginRight="34dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/titleSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_text_bg">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/addressSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:overlapAnchor="false"
                        android:paddingLeft="0dp" />

                    <ImageView
                        android:id="@+id/addressTriangle"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/triangle" />

                    <View

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/hint_color" />


                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:background="@null"
                        android:hint="John Doe"
                        android:inputType="textPersonName"
                        android:paddingLeft="7dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hint_color"
                        android:textSize="12sp"
                        app:boxStrokeColor="@color/hint_color" />


                </LinearLayout>


                <TextView
                    android:id="@+id/titleError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:text="* This is a required field"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/nameError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:text="* This is a required field"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Address Line 1"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/addressLine1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="1313 Disneyland Dr,"
                    android:paddingVertical="5dp"
                    android:paddingLeft="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/addressError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:text="* This is a required field"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Address Line 2"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/addressLine2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="5th Avenue"
                    android:paddingVertical="5dp"
                    android:paddingLeft="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="12sp"
                    app:boxStrokeColor="@color/hint_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="City"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="Anaheim"
                    android:paddingLeft="13dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="12sp"
                    app:boxStrokeColor="@color/hint_color" />

                <TextView
                    android:id="@+id/cityError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:text="* This is a required field"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="10sp"
                    android:visibility="gone" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="State / Province"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="California"
                    android:paddingLeft="13dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="12sp"
                    app:boxStrokeColor="@color/hint_color" />

                <TextView
                    android:id="@+id/stateError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:text="* This is a required field"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Country"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="14sp" />


                <LinearLayout
                    android:id="@+id/dSpinnerCountryLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/dSpinnerCountry"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center|left"
                        android:hint="Select country"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="@color/hint_color"
                        android:textColorHint="@color/hint_color"
                        android:textSize="12sp"
                        app:boxStrokeColor="@color/hint_color" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/hint_color" />


                    <ImageView
                        android:id="@+id/triangleDropdown"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/triangle" />


                </LinearLayout>


                <TextView
                    android:id="@+id/countryError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:text="* This is a required field"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Pincode"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/pinCode"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="92802"
                    android:inputType="number"
                    android:paddingLeft="13dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="12sp"
                    app:boxStrokeColor="@color/hint_color" />

                <TextView
                    android:id="@+id/pinCodeError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:text="* This is a required field"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Phone Number"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="14sp" />


                <LinearLayout

                    android:id="@+id/phoneInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:orientation="horizontal">

                    <RelativeLayout

                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:gravity="center">


                        <TextView
                            android:id="@+id/countryCodeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="+91"
                            android:textColor="@color/hint_color"
                            android:textSize="12sp" />


                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="9dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/triangle" />

                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/hint_color" />

                    <EditText
                        android:id="@+id/phoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center|left"
                        android:hint="714-956-6425"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hint_color"
                        android:textSize="12sp"
                        app:boxStrokeColor="@color/hint_color" />


                </LinearLayout>


                <TextView
                    android:id="@+id/errorNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:text="* This is a required field"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="10sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/phoneError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:text="* This is a required field"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton

                    android:id="@+id/addAddressBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="29dp"
                    android:backgroundTint="#17B28F"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Add Address"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textFontWeight="700"
                    android:textSize="12sp"
                    app:cornerRadius="5dp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>