<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/box_background_color"
    tools:context=".UI.Orders.OrderFragments.OrderFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    android:id="@+id/sevenDay">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:layout_marginBottom="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="17dp"
                                android:layout_marginTop="15dp"
                                android:text="Avail discount on your first shipment*"
                                android:textColor="@color/black"
                                android:textFontWeight="700"
                                android:textSize="11sp" />

                            <EditText
                                android:layout_width="194dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="19dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/edittext_bg"
                                android:hint="Enter referal code"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:paddingLeft="10dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/hint_color"
                                android:textSize="12sp" />

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="118dp"
                                android:layout_height="24dp"
                                android:layout_marginHorizontal="57dp"
                                android:layout_marginTop="12dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                android:text="Submit"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textFontWeight="700"
                                android:textSize="10sp"
                                app:backgroundTint="#17B28F"
                                app:cornerRadius="5dp"
                                android:id="@+id/submit"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="31dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="15dp"
                                android:text="*Refferal valid only for 7 days from Sign-up"
                                android:textColor="@color/black"
                                android:textFontWeight="400"
                                android:textSize="8sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="18dp"
                            android:src="@drawable/ic_discount1" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="22dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    android:id="@+id/verifyEmailBox"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="13dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Verify your account details to get started"
                                android:textColor="#F44336"
                                android:textFontWeight="600"
                                android:textSize="11sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:lineHeight="10.97dp"
                                android:text="@string/varify_your_account_details"
                                android:textColor="@color/black"
                                android:textFontWeight="500"
                                android:textSize="9sp" />


                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="Verify Email"
                            android:textAllCaps="false"
                            android:textFontWeight="700"
                            android:textSize="10sp"
                            app:backgroundTint="#17B28F"
                            android:textColor="@color/white"
                            app:cornerRadius="5dp"
                            android:id="@+id/verifyEmailBtn"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginHorizontal="22dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    android:id="@+id/banner">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="243dp"
                            android:src="@drawable/banner"
                            android:layout_marginTop="-10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="SHOP"
                            android:textColor="#DF1D37"
                            android:textFontWeight="700"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="from any Indian websites"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:gravity="center_horizontal"
                            android:textSize="14sp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:text="SHIP"
                            android:textColor="#F3A10E"
                            android:textFontWeight="700"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="across 220+ countries"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:gravity="center_horizontal"
                            android:textSize="14sp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:text="SAVE"
                            android:textColor="#0B84A0"
                            android:textFontWeight="700"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="60-80% on shipping prices"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:gravity="center_horizontal"
                            android:textSize="14sp"/>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/shippingCalculator"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:text="Calculate Shipping Prices"
                            android:textSize="14sp"
                            android:textFontWeight="700"
                            app:cornerRadius="5dp"
                            app:backgroundTint="#17B28F"
                            android:textColor="@color/white"
                            android:padding="0dp"
                            android:textAllCaps="false"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="15dp"
                            android:text="View Virtual Address"
                            android:textColor="#2F4CAB"
                            android:textFontWeight="400"
                            android:gravity="center_horizontal"
                            android:textSize="14sp"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="28dp"
                    android:layout_marginHorizontal="22dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    android:id="@+id/ordersCard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="15dp"
                        android:text="Orders"
                        android:textColor="@color/black"
                        android:textFontWeight="700"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="89dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_empty_orders"
                        android:layout_marginTop="27dp"
                        android:layout_gravity="center_horizontal"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="19dp"
                            android:text="Looks like your order list is empty!"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:gravity="center_horizontal"
                            android:textSize="14sp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addYourFirstOrderBtn"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="33dp"
                            android:text="Add Your First Order"
                            android:textSize="14sp"
                            android:textFontWeight="700"
                            app:cornerRadius="5dp"
                            app:backgroundTint="#17B28F"
                            android:textColor="@color/white"
                            android:padding="0dp"
                            android:textAllCaps="false"
                            android:layout_gravity="center_horizontal"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/orderListing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/virtualAddressCard"
                        android:layout_width="114dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingHorizontal="20dp"
                                android:paddingTop="20dp"
                                android:src="@drawable/ic_virtual_address" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="20dp"
                                android:gravity="center"
                                android:text="Virtual\nAddress"
                                android:textColor="#86888C"
                                android:textFontWeight="600"
                                android:textSize="10sp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/shippingCalculatorCard"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="5dp"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingHorizontal="20dp"
                                android:paddingTop="20dp"
                                android:src="@drawable/ic_shipping_calculator" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="20dp"
                                android:gravity="center"
                                android:text="Shipping\nCalculator"
                                android:textColor="#86888C"
                                android:textFontWeight="600"
                                android:textSize="10sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="5dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingHorizontal="20dp"
                                android:paddingTop="20dp"
                                android:src="@drawable/ic_help___faq" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="20dp"
                                android:gravity="center"
                                android:text="Help &amp;\nFAQ"
                                android:textColor="#86888C"
                                android:textFontWeight="600"
                                android:textSize="10sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/forgetSomething"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="21dp"
                    android:layout_marginTop="23dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="26dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_weight="400"
                                android:lineSpacingExtra="2dp"
                                android:text="Forgot Something?\nYour previous Personal Shopper order is still waiting for you..."
                                android:textColor="@color/black"
                                android:textSize="10sp" />


                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="118dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="Continue Order"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textFontWeight="700"
                            android:textSize="10sp"
                            app:backgroundTint="#2D8DFF"
                            app:cornerRadius="5dp" />


                    </LinearLayout>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="21dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="28dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="24dp"
                                android:text="Orders"
                                android:textColor="@color/black"
                                android:textFontWeight="700"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="17dp"
                                android:gravity="right">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/addNewOrderBtn"
                                    android:layout_width="152dp"
                                    android:layout_height="24dp"
                                    android:layout_marginTop="19dp"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    android:text="Add New Order"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textFontWeight="700"
                                    android:textSize="12sp"
                                    app:backgroundTint="#17B28F"
                                    app:cornerRadius="5dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/orderRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="29dp">

                        </androidx.recyclerview.widget.RecyclerView>


                        <LinearLayout
                            android:id="@+id/cancel"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="19dp"
                            android:gravity="center"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="Archived / Cancelled Orders"
                                android:textColor="#3A5FD8"
                                android:textFontWeight="500"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="4dp"
                                android:src="@mipmap/showmore" />
                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>