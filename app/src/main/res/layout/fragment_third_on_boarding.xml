<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.OnBoarding.ThirdOnBoarding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginVertical="28dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/back_arrow2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back_arrow" />


            <TextView
                android:id="@+id/skip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SKIP"
                android:textColor="@color/skipcolor"
                android:textSize="14sp"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>



            <ImageView
                android:layout_marginTop="-60dp"
                android:layout_width="wrap_content"
                android:layout_height="436dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/onboarding3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="-30dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/we_ll_consolidate_ship_it_to_you"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:textSize="24sp"
            android:textStyle="bold" />





            <com.google.android.material.button.MaterialButton
                android:id="@+id/next_btn_3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"

                android:backgroundTint="@color/button_color"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                app:iconTint="@color/white"
                android:text="Next"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="24dp"
                app:cornerRadius="8dp"
                app:icon="@mipmap/button_arrow"
                app:iconGravity="textEnd"
                app:iconSize="24dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>