<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.OnBoarding.FirstOnBoarding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginVertical="28dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:id="@+id/skip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="SKIP"
            android:textColor="@color/skipcolor"
            android:textSize="14sp" />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="436dp"
                android:src="@drawable/onboarding1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="49dp"
                android:layout_marginTop="-80dp"
                android:layout_marginEnd="50dp"
                android:textStyle="bold"

                android:gravity="center_horizontal|center_vertical"
                android:text="@string/get_a_unique_indian_virtual_address_to_shop"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next_btn_1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="20dp"
                android:backgroundTint="@color/button_color"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:text="Next"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="24dp"
                app:cornerRadius="5dp"
                app:icon="@mipmap/button_arrow"
                app:iconTint="@color/white"
                app:iconGravity="textEnd"
                app:iconSize="24dp" />


</LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>