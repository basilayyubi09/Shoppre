<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/websiteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        android:text="Myntra"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Charges"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/charges"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/edittext_bg"
        android:hint="Tax or Delivery Charges"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Additional Instructions"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/instruction"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/edittext_bg"
        android:hint="Enter text here"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Continue buying, even if the cost of items go up by"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/edit_text_bg"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/dropdown"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:hint="Select an option"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/hint_color"
            android:textColorHint="@color/hint_color"
            android:textSize="10sp"
            app:boxStrokeColor="@color/hint_color" />

        <View

            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/hint_color" />


        <ImageView
            android:id="@+id/triangleDropdown"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/triangle" />


    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="28dp"
        android:background="@color/background" />
</LinearLayout>


