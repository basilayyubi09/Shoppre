<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Shipment.ShippingCalculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="24dp"
            android:paddingBottom="33dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="27dp"
                        android:text="Shipping Price Calculator"
                        android:textColor="@color/black"
                        android:textFontWeight="700"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="2dp"
                        android:text="Calculate your Estimated International Shipping Price"
                        android:textColor="@color/black"
                        android:textFontWeight="500"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="27dp"
                    android:layout_marginHorizontal="33dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Ship From"
                        android:textColor="@color/black"
                        android:textFontWeight="500"
                        android:textSize="10sp" />



                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="6dp"
                        android:background="@drawable/edittext_bg"
                        android:text="India"
                        android:paddingLeft="18dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Where do you want to ship?"
                        android:textColor="@color/black"
                        android:textFontWeight="500"
                        android:textSize="10sp" />



                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="6dp"
                        android:background="@drawable/edittext_bg"
                        android:text="96941, Federated States of Micronesia"
                        android:paddingLeft="18dp"
                        android:drawableEnd="@drawable/gps"
                        android:paddingRight="5dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="What do you want to ship?"
                        android:textColor="@color/black"
                        android:textFontWeight="500"
                        android:textSize="10sp" />


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/edit_text_bg">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Select country"
                            android:layout_marginLeft="13dp"
                            android:gravity="center|left"
                            android:singleLine="true"
                            android:textFontWeight="400"
                            android:textStyle="italic"
                            android:textColor="@color/hint_color"
                            android:textColorHint="@color/hint_color"
                            android:textSize="12sp"
                            app:boxStrokeColor="@color/hint_color" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/hint_color"/>


                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="8dp"
                            android:src="@drawable/triangle" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="What do you want to ship?"
                        android:textColor="@color/black"
                        android:textFontWeight="500"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:text="No"
                            android:insetBottom="0dp"
                            android:insetTop="0dp"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:background="@drawable/button_no_selector"
                            android:textColor="@color/black" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:text="Yes"
                            android:layout_weight="1"
                            android:insetBottom="0dp"
                            android:insetTop="0dp"
                            android:textSize="12sp"
                            android:background="@drawable/button_corner2"
                            android:textColor="@color/black"
                            android:backgroundTint="#F8F8F8"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>