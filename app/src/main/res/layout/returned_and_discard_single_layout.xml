<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="18dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_personal_shopper"
        android:id="@+id/returnedAndDiscardImage"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/returnedAndDiscardWebName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Myntra"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (2)"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="12sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/returnedAndDiscardPackageId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package ID #8473"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contains Damaged Items"
            android:textSize="10sp"
            android:textColor="#FF0101"
            android:textFontWeight="500"
            android:layout_marginTop="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contains Restricted Items"
            android:textSize="10sp"
            android:textColor="#FF0101"
            android:visibility="gone"
            android:textFontWeight="500"
            android:layout_marginTop="3dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contains Damaged &amp; Restricted Items"
            android:textSize="10sp"
            android:textColor="#FF0101"
            android:visibility="gone"
            android:textFontWeight="500"
            android:layout_marginTop="3dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Free Locker Days left"
            android:textSize="8sp"
            android:textFontWeight="500"
            android:visibility="gone"
            android:textColor="#EF5261"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package Discarded"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textSize="9sp"
            android:textFontWeight="500"
            android:textColor="#0073FF"

            android:background="@drawable/price_changed_background"
            android:paddingHorizontal="3dp"
            android:paddingVertical="3dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Package"
                android:textColor="#3A5FD8"
                android:textSize="10sp"
                android:textFontWeight="500"/>
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processing Package"
                android:textColor="#7A7A7A"
                android:textSize="10sp"
                android:textFontWeight="500"/>

            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/timer"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>