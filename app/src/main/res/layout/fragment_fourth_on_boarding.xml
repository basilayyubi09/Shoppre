<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.OnBoarding.FourthOnBoarding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginVertical="28dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back_arrow3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back_arrow"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="436dp"
                android:src="@drawable/onboarding4" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:textAlignment="center"
                android:text="@string/unlock_your_unique_virtual_address"
                android:layout_marginTop="-80dp"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/unlock_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="25dp"
                android:backgroundTint="@color/button_color"
                android:letterSpacing="0.03"
                android:text="Unlock now!"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="24dp"
                android:textStyle="bold"
                app:cornerRadius="5dp"
                android:paddingVertical="13dp"
                android:layout_marginVertical="20dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>