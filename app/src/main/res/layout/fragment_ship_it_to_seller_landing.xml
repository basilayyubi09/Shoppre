<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Locker.ShipItToSellerLanding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="21dp"
                android:layout_marginTop="23dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/singleOrderImage"
                                    android:layout_width="39dp"
                                    android:layout_height="39dp"
                                    android:layout_marginLeft="18dp"
                                    android:src="@drawable/ic_personal_shopper" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Myntra"
                                        android:textColor="@color/black"
                                        android:textFontWeight="700"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:background="@drawable/action_required_background"
                                        android:paddingHorizontal="7dp"
                                        android:paddingVertical="3dp"
                                        android:text="Action Required"
                                        android:textColor="#F8B800"
                                        android:textFontWeight="500"
                                        android:textSize="8sp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="27dp"
                                android:layout_marginTop="19dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/weight" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Total Weight"
                                        android:textColor="@color/black"
                                        android:textFontWeight="500"
                                        android:textSize="10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2.5 KG"
                                        android:textColor="@color/black"
                                        android:textFontWeight="600"
                                        android:textSize="14sp" />

                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="17dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="600"
                                    android:text="Package ID: "
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="600"
                                    android:text=" #8473"
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="500"
                                    android:text="Tracking No:"
                                    android:textColor="#676767"
                                    android:textSize="9sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="500"
                                    android:text=" #45U5G14"
                                    android:textColor="#676767"
                                    android:textSize="9sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="600"
                                    android:text="Received On: "
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="600"
                                    android:text="15 Dec 2020"
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="17dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="29dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/wallet" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Package Value"
                                        android:textColor="@color/black"
                                        android:textFontWeight="500"
                                        android:textSize="10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="To Be Calculated"
                                        android:textColor="@color/black"
                                        android:textFontWeight="600"
                                        android:textSize="10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="â‚¹ 2500.00"
                                        android:textColor="@color/black"
                                        android:textFontWeight="600"
                                        android:textSize="14sp"
                                        android:visibility="gone" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/viewPackageViewMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="17dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Order"
                            android:textColor="#3A5FD8"
                            android:textFontWeight="500"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/ic_arrow" />
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="21dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="28dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="18dp"
                        android:text="Add Return Address"
                        android:textColor="@color/black"
                        android:textFontWeight="700"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="42dp"
                        android:text="Seller Address"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="34dp"
                        android:layout_marginTop="27dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name"
                            android:textColor="@color/black"
                            android:textFontWeight="500"
                            android:textSize="10sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/edittext_bg"
                            android:paddingVertical="5dp"
                            android:paddingLeft="13dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint_color"
                            android:textSize="12sp"
                            app:boxStrokeColor="@color/hint_color" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Address Line 1"
                            android:textColor="@color/black"
                            android:textFontWeight="500"
                            android:textSize="10sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/edittext_bg"
                            android:paddingVertical="5dp"
                            android:paddingLeft="13dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint_color"
                            android:textSize="12sp"
                            app:boxStrokeColor="@color/hint_color" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Address Line 2"
                            android:textColor="@color/black"
                            android:textFontWeight="500"
                            android:textSize="10sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/edittext_bg"
                            android:paddingVertical="5dp"
                            android:paddingLeft="13dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint_color"
                            android:textSize="12sp"
                            app:boxStrokeColor="@color/hint_color" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="City"
                            android:textColor="@color/black"
                            android:textFontWeight="500"
                            android:textSize="10sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/edittext_bg"
                            android:paddingVertical="5dp"
                            android:paddingLeft="13dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint_color"
                            android:textSize="12sp"
                            app:boxStrokeColor="@color/hint_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="State / Province"
                            android:textColor="@color/black"
                            android:textFontWeight="500"
                            android:textSize="10sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/edittext_bg"
                            android:paddingVertical="5dp"
                            android:paddingLeft="13dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint_color"
                            android:textSize="12sp"
                            app:boxStrokeColor="@color/hint_color" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Country"
                            android:textColor="@color/black"
                            android:textFontWeight="500"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:id="@+id/shipItToSellerCountry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_bg"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/shipToSellerCountryTextView"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text=""
                                android:paddingLeft="15dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/hint_color" />


                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="8dp"
                                android:src="@drawable/triangle" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Pincode"
                            android:textColor="@color/black"
                            android:textFontWeight="500"
                            android:textSize="10sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/edittext_bg"
                            android:paddingVertical="5dp"
                            android:paddingLeft="13dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint_color"
                            android:textSize="12sp"
                            app:boxStrokeColor="@color/hint_color" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Phone Number"
                            android:textColor="@color/black"
                            android:textFontWeight="500"
                            android:textSize="10sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/edittext_bg"
                            android:paddingVertical="5dp"
                            android:paddingLeft="13dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint_color"
                            android:textSize="12sp"
                            app:boxStrokeColor="@color/hint_color" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:text="@string/ship_it_to_seller_landing_text"
                            android:textSize="10sp"
                            android:textFontWeight="400"
                            android:textColor="@color/black"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/return_landing_proceed_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:paddingHorizontal="71dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="34dp"
                            android:layout_marginBottom="46dp"
                            android:backgroundTint="#17B28F"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:letterSpacing="0.03"
                            android:lineHeight="14sp"
                            android:text="Confirm"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textFontWeight="700"
                            android:textSize="12sp"
                            app:cornerRadius="5dp" />


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>