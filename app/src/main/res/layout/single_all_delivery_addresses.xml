<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="23dp"
                android:layout_marginTop="14dp"
                android:background="#C4C4C4" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="14dp"
                android:layout_marginHorizontal="16dp">


                <RadioButton
                    android:id="@+id/addressRadioBtn"
                    android:layout_width="26dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="5dp"
                    android:padding="0dp"
                    android:buttonTint="#3A5FD8"/>


                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deliver To"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/deliverToName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nikkitha Shanker"
                        android:textColor="@color/black"
                        android:textFontWeight="550"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deliver Address"
                        android:textColor="@color/black"
                        android:layout_marginTop="12dp"
                        android:textFontWeight="400"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/line1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="Line 1"
                        android:textColor="@color/black"
                        android:textFontWeight="550"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="State"
                    android:textColor="@color/black"
                    android:textFontWeight="550"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                    <TextView
                        android:id="@+id/country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="Country"
                        android:textColor="@color/black"
                        android:textFontWeight="550"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="12dp"
                            android:text="@string/edit"
                            android:textColor="#3A5FD8"
                            android:textFontWeight="500"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="12dp"
                            android:text="@string/delete"
                            android:textColor="#3A5FD8"
                            android:textFontWeight="500"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/defaultButton"
                    android:layout_width="72dp"
                    android:layout_height="18dp"
                    android:backgroundTint="#E5E5E5"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Default"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="8sp"
                    app:cornerRadius="6dp"
                    app:elevation="0dp"
                    />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/deliverToContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+9714702 4444"
                        android:layout_marginRight="14dp"
                        android:textColor="@color/black"
                        android:textFontWeight="550"
                        android:textSize="12sp" />




                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


</LinearLayout>