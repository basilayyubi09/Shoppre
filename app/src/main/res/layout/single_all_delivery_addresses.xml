<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="23dp"
                android:layout_marginTop="14dp"
                android:background="#C4C4C4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp">

                    <RadioButton
                        android:layout_width="25dp"
                        android:layout_height="22dp"
                        android:padding="0dp"
                        android:layout_gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deliver To"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="12sp" />

                        <TextView

                            android:id="@+id/deliverToName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nikkitha Shanker"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Number"
                            android:textColor="@color/black"
                            android:textFontWeight="500"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/deliverToContactNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+9714702 4444"
                            android:textColor="@color/black"
                            android:textFontWeight="500"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="72dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="28dp"
                        android:backgroundTint="#FFFFFF"
                        app:elevation="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="Default"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="8sp"
                        app:cornerRadius="6dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deliver Address"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/deliverToAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="Delivery Address 24 Airport Rd -\nGarhoud - Dubai -\nUnited Arab Emirates"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/editDeliveryAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:text="@string/edit"
                        android:textColor="#3A5FD8"
                        android:textFontWeight="500"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/deleteDeliveryAddrs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:text="@string/delete"
                        android:textColor="#3A5FD8"
                        android:textFontWeight="500"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>