<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Locker.ShipWithinIndiaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="23dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="18dp"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/singleOrderImage"
                                android:layout_width="39dp"
                                android:layout_height="39dp"
                                android:layout_marginLeft="18dp"
                                android:src="@drawable/ic_personal_shopper" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/websiteName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Myntra"
                                    android:textColor="@color/black"
                                    android:textFontWeight="700"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/comment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:background="@drawable/action_required_background"
                                    android:paddingHorizontal="7dp"
                                    android:paddingVertical="3dp"
                                    android:text="Action Required"
                                    android:textColor="#F8B800"
                                    android:textFontWeight="500"
                                    android:textSize="8sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="27dp"
                            android:layout_marginTop="19dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="25dp"
                                android:src="@drawable/weight" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Weight"
                                    android:textColor="@color/black"
                                    android:textFontWeight="500"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2.5 KG"
                                    android:textColor="@color/black"
                                    android:textFontWeight="600"
                                    android:textSize="14sp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginTop="18dp"
                        android:gravity="right"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="600"
                                android:text="Package ID: "
                                android:textColor="@color/black"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/packageId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="600"
                                android:text=" #8473"
                                android:textColor="@color/black"
                                android:textSize="10sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="500"
                                android:text="Tracking No:"
                                android:textColor="#676767"
                                android:textSize="9sp" />

                            <TextView
                                android:id="@+id/trackingNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="500"
                                android:text=" #45U5G14"
                                android:textColor="#676767"
                                android:textSize="9sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="600"
                                android:text="Received On: "
                                android:textColor="@color/black"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="600"
                                android:text="15 Dec 2020"
                                android:textColor="@color/black"
                                android:textSize="10sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="29dp"
                                android:layout_height="25dp"
                                android:src="@drawable/wallet" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Package Value"
                                    android:textColor="@color/black"
                                    android:textFontWeight="500"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To Be Calculated"
                                    android:textColor="@color/black"
                                    android:textFontWeight="600"
                                    android:textSize="10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ 2500.00"
                                    android:textColor="@color/black"
                                    android:textFontWeight="600"
                                    android:visibility="gone"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewPackageViewMore"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="17dp">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Order"
                        android:textColor="#3A5FD8"
                        android:textSize="10sp"
                        android:textFontWeight="500"/>
                    <ImageView
                        android:layout_marginLeft="2dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow"/>
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="23dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="28dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Indian Address"
                    android:textSize="14sp"
                    android:textFontWeight="700"
                    android:textColor="@color/black"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="49dp"
                            android:layout_marginLeft="20dp">

                            <RadioButton
                                android:layout_width="26dp"
                                android:layout_height="22dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Deliver To"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textFontWeight="400"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nikkitha Shanker"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textFontWeight="500"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Contact Number"
                                    android:textSize="10sp"
                                    android:textFontWeight="400"
                                    android:layout_marginTop="32dp"
                                    android:textColor="@color/black"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+9714702 4444"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textFontWeight="500"/>


                            </LinearLayout>


                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="26dp"
                        android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/defaultButton"
                        android:layout_width="72dp"
                        android:layout_height="18dp"
                        android:backgroundTint="#E5E5E5"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="Default"
                        android:layout_gravity="center_horizontal"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="8sp"
                        app:cornerRadius="6dp"
                        app:elevation="0dp"
                        />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/edit"
                            android:layout_marginRight="38dp"/>

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/delete"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="21dp"
                            android:layout_marginLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Address"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textFontWeight="400"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="182, 1st Floor, 2nd Cross Rd,\n7th Main, Koramangala\nBengaluru, Karnataka,\nIndia. 560034."
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textFontWeight="500"/>



                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hint_color"
                    android:layout_marginTop="26dp"
                    android:layout_marginHorizontal="23dp"/>

                <LinearLayout
                    android:id="@+id/addMoreShipmentAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="22dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add more address"
                        android:textColor="#3A5FD8"
                        android:textSize="12sp"
                        android:textFontWeight="500"/>

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_add"
                        android:layout_marginLeft="6dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add the address where the product needs to be\nshipped in India.\n\nDomestic Shipping Charges will be applied based on\n the weight of your package."
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="24dp"
                    android:textFontWeight="400"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textFontWeight="400"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingHorizontal="71dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="46dp"
                    android:backgroundTint="#17B28F"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:letterSpacing="0.03"
                    android:lineHeight="14sp"
                    android:text="Confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textFontWeight="700"
                    android:textSize="12sp"
                    app:cornerRadius="5dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    </ScrollView>
</FrameLayout>