<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/alertIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alert" />

        <TextView
            android:id="@+id/alertText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="ALERT"
            android:textFontWeight="600"
            android:textSize="12sp" />



        </LinearLayout>


        <ImageView
            android:id="@+id/alert_close_btn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_weight="0.1"
            android:src="@drawable/cross" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:orientation="vertical"
        android:layout_marginTop="13dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please note"
            android:textSize="10sp"
            android:textFontWeight="400"
            android:textColor="@color/black"
            android:layout_marginBottom="11dp"/>

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reviewText"
            android:text="- You’ve 1 package pending in ‘In Review’"
            android:textSize="10sp"
            android:textFontWeight="400"

            android:textColor="@color/black"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/actionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- You’ve 2 packages pending in ‘Action Required’"
            android:textSize="10sp"
            android:textFontWeight="400"

            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/damagedText"
            android:text="@string/your_package_contains_damaged_items"
            android:textSize="10sp"
            android:textFontWeight="400"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_package_contains"
            android:textSize="10sp"
            android:textFontWeight="400"
            android:textColor="@color/black"
            android:id="@+id/restrictedText"
            android:visibility="gone"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to proceed with the ship request"
            android:textSize="10sp"
            android:textFontWeight="400"
            android:layout_gravity="center"
            android:textColor="#8F8F8F"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/proceedToShipRequestBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="5dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#17B28F"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="17dp"
            android:text="Proceed to Ship Request"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="10sp" />

    </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>