<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_marginTop="33dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/packageDetailsImageLayout"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/package_image_border"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/packageItemImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/package_image_border"
                android:src="@drawable/mobile1" />


        </LinearLayout>


        <TextView
            android:layout_width="41dp"
            android:layout_height="12dp"
            android:background="@drawable/view_package_background"
            android:paddingHorizontal="9dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="6dp"
            android:text="VIEW"
            android:textColor="@color/white"
            android:textSize="8sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/packageItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redmi Note 9 Pro Max"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textFontWeight="500"
            android:singleLine="true"
            android:maxEms="10"/>

        <TextView
            android:id="@+id/packageItemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item ID: #29357"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textFontWeight="400" />

        <TextView
            android:id="@+id/packageQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty: 01"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textFontWeight="400" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Per Item"
            android:textSize="10sp"
            android:textFontWeight="400"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center_vertical">

        <TextView
            android:id="@+id/packageItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 19,999.00"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textFontWeight="600"/>

            <ImageView
                android:id="@+id/editPackageItem"
                android:layout_width="wrap_content"
                android:layout_height="19dp"

                android:src="@drawable/edit_package" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="93dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/price_per_item_border">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textFontWeight="600"
                android:text=""/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FF0101"
                android:layout_gravity="right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="!"
                android:textColor="#FF0101"
                android:layout_marginHorizontal="7dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="93dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:gravity="center"

            android:background="@drawable/price_per_item_border2">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#7A7A7A"
                android:textFontWeight="600"
                android:text="₹ 1950.00"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#00A781"
                android:layout_gravity="right"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/checked"
                android:textColor="#00A781" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/three_dots"
        android:layout_width="18dp"
        android:layout_height="match_parent"
        android:src="@drawable/three_dots"
        android:layout_marginLeft="19dp"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/packageDetailCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"/>

</LinearLayout>