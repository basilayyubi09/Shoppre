<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="33dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/packageDetailsImageLayout"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/package_image_border"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/packageItemImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/package_image_border"
                android:src="@drawable/mobile1" />


        </LinearLayout>


        <TextView

            android:layout_width="41dp"
            android:layout_height="12dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/view_package_background"
            android:paddingHorizontal="9dp"
            android:text="VIEW"
            android:textColor="@color/white"
            android:textSize="8sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/packageItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="10"
            android:singleLine="true"
            android:text="Redmi Note 9 Pro Max"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/packageItemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item ID: #29357"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/packageQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty: 01"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="10sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2D8DFF"
            android:drawableRight="@drawable/return_arrow"
            android:letterSpacing="0"
            android:padding="4dp"
            android:text="Return Item(s)"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="14sp"
            android:visibility="gone"
            app:cornerRadius="5dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2D8DFF"
            android:drawableRight="@drawable/return_arrow"
            android:letterSpacing="0"
            android:padding="4dp"
            android:text="Exchange Item(s)"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="14sp"
            android:visibility="gone"
            app:cornerRadius="5dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2D8DFF"
            android:drawableRight="@drawable/return_arrow"
            android:letterSpacing="0"
            android:padding="4dp"
            android:text="Discard Item(s)"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="14sp"
            android:visibility="gone"
            app:cornerRadius="5dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2D8DFF"
            android:drawableRight="@drawable/return_arrow"
            android:letterSpacing="0"
            android:padding="4dp"
            android:text="Split Package"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="14sp"
            android:visibility="gone"
            app:cornerRadius="5dp" />


        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2D8DFF"
            android:drawableRight="@drawable/return_arrow"
            android:letterSpacing="0"
            android:padding="4dp"
            android:text="Ship within India"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="14sp"
            android:visibility="gone"
            app:cornerRadius="5dp" />


        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Per Item"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="10sp" />




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/layoutBg"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                >

                <EditText
                    android:id="@+id/priceEditText"
                    android:background="@null"
                    android:maxLines="1"
                    android:layout_width="70dp"
                    android:paddingLeft="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="12sp"
                    android:inputType="number"
                    android:enabled="false"/>
                <View
                    android:id="@+id/viewVertical"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    />


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/edit"
                    android:textColor="#00A781" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/secondLayoutBg"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:background="@drawable/price_per_item_border">

                <EditText
                    android:id="@+id/secondPriceEditText"
                    android:background="@null"
                    android:maxLines="1"
                    android:layout_width="70dp"
                    android:paddingLeft="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="12sp"
                    android:inputType="number"
                    android:enabled="false"/>
                <View
                    android:id="@+id/secondViewVertical"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_red"
                    />


                <ImageView
                    android:id="@+id/secondImage"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@mipmap/exclamation"
                    android:textColor="#00A781" />

            </LinearLayout>

            <LinearLayout

                android:visibility="gone"
                android:id="@+id/thirdLayoutBg"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:background="@drawable/price_per_item_border2">

                <EditText
                    android:id="@+id/thirdPriceEditText"
                    android:background="@null"
                    android:maxLines="1"
                    android:layout_width="70dp"
                    android:paddingLeft="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="12sp"
                    android:inputType="number"
                    android:enabled="false"/>
                <View
                    android:id="@+id/thirdViewVertical"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#00A781"
                    />


                <ImageView
                    android:id="@+id/thirdImage"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/checked"
                    android:textColor="#00A781" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/three_dots"
        android:layout_width="18dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="19dp"
        android:src="@drawable/three_dots" />



    <CheckBox
        android:id="@+id/packageDetailCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="-10dp"
        android:visibility="gone" />

</LinearLayout>