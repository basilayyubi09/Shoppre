<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Orders.OrderFragments.TabLayoutFragments.OrderDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:padding="30dp"
            android:visibility="gone"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="34dp"
            android:src="@drawable/shopprelogo"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orderDetailsRecycler"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="34dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <TextView
            android:visibility="gone"
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:text="There are no items to show"
            android:textColor="@color/black"
            android:textFontWeight="700"

            android:textSize="20sp" />

    </LinearLayout>
</FrameLayout>