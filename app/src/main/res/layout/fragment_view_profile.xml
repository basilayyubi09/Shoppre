<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.AccountAndWallet.AcountWalletFragments.ViewProfile">

    <include layout="@layout/toolbar" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="28dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/box_background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="29dp"
                android:src="@drawable/big_round"
                app:civ_border_color="#2F4CAB"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginRight="51dp"
                    android:lineHeight="17sp"
                    android:text="Nikkitha Shankar"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="28dp"
                    android:text="Locker No.: SA-976-6767"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="67dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/small_round" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="14dp"
                            android:text="My Wallet"
                            android:textColor="@color/black"
                            android:textFontWeight="500"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/profilePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="28dp"
                            android:text="\u20B9 250.00"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="22dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="29dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#FFF4F4"
                app:cardCornerRadius="10dp"
                app:strokeColor="#FF0000"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="19dp"
                    android:layout_marginVertical="9dp"
                    android:gravity="center"
                    android:lineHeight="13sp"
                    android:text="Weâ€™ve sent you an email with link for verification. Please verify your account to keep your account active."
                    android:textColor="#FF0000"
                    android:textFontWeight="400"
                    android:textSize="10sp" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="25dp"
                android:lineHeight="15sp"
                android:text="Full Name"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menu"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/box_background_color"
                    app:boxCornerRadiusBottomEnd="0dp"
                    app:boxCornerRadiusTopEnd="0dp"
                    app:endIconDrawable="@mipmap/dropdown_icon"
                    app:endIconMode="custom"
                    app:endIconTint="@color/hint_color"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    android:layout_marginLeft="34dp">

                    <AutoCompleteTextView
                        android:id="@+id/profileTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:hint="Title"
                        android:inputType="none"
                        android:padding="0dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hint_color"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profileFullName"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="2"
                    android:background="@color/box_background_color"
                    app:boxCornerRadiusBottomStart="0dp"
                    app:boxCornerRadiusTopStart="0dp"
                    app:boxStrokeColor="@color/box_background_color"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Nikkitha Shankar"
                        android:padding="0dp"
                        android:textColorHint="@color/black"
                        android:textFontWeight="500"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="29dp"
                    android:layout_marginLeft="4dp"
                    android:src="@mipmap/check_symbol" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="25dp"
                android:lineHeight="15sp"
                android:text="Email ID"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="12sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profileEmail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginHorizontal="29dp"
                android:layout_marginTop="3dp"
                android:background="@color/box_background_color"
                app:boxStrokeColor="@color/hint_color"
                app:boxStrokeWidth="1dp"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="nikkitha@gmail.com"
                    android:inputType="textEmailAddress"
                    android:padding="0dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="12sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/unverified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="49dp"
                    android:text="Unverified"
                    android:textColor="#FF0000"
                    android:textFontWeight="500"

                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="51dp"
                    android:text="Resend Verification Email"
                    android:textColor="#3A5FD8"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:src="@mipmap/refresh_icon" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="25dp"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="@string/enter_your_phone_number_to_get_regular_alerts"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="10sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="29dp">

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/box_background_color"
                    app:boxCornerRadiusBottomEnd="0dp"
                    app:boxCornerRadiusTopEnd="0dp"
                    app:endIconDrawable="@mipmap/dropdown_icon"
                    app:endIconMode="custom"
                    app:endIconTint="@color/hint_color"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <AutoCompleteTextView

                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:hint="+91"
                        android:inputType="none"
                        android:padding="0dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hint_color"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="2"
                    android:background="@color/box_background_color"
                    app:boxCornerRadiusBottomStart="0dp"
                    app:boxCornerRadiusTopStart="0dp"
                    app:boxStrokeColor="@color/box_background_color"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Nikkitha Shankar"
                        android:padding="0dp"
                        android:textColorHint="@color/black"
                        android:textFontWeight="500"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <Spinner
                android:layout_width="66dp"
                android:layout_height="28dp"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>