<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/second"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/add_more_photo_text"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="12sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text=" Do you want to select more?"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please note that Additional Photos are allowed only once per package"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"
            android:textFontWeight="500"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addMoreProductBtn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"

                android:text="Add more items"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="10sp"
                app:strokeColor="#2D8DFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/proceedWith1ItemBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/addMoreProductBtn"
                android:backgroundTint="#17B28F"

                android:text="Proceed with 1 item"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/viewPhotoCloseBtn"
                android:layout_width="16dp"
                android:layout_height="22dp"
                android:layout_gravity="right"
                android:layout_marginTop="7dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/cross" />

            <ImageView
                android:id="@+id/mainPhoto"
                android:layout_width="284dp"
                android:layout_height="371dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/view_photo_blurred" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/unlockPhotoBtn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:backgroundTint="#17B28F"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:letterSpacing="0.03"
                android:lineHeight="14sp"
                android:paddingHorizontal="13dp"
                android:text="Unlock Photo for ₹5.00 "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="12sp"
                app:cornerRadius="5dp" />

            <TextView
                android:id="@+id/orText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:text="OR"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/requestText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="13dp"
                android:text="Request Additional Photos"
                android:textColor="#3A5FD8"
                android:textFontWeight="500"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/popUpAdditionalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginBottom="22dp"
                android:text="Additional inspections are done while taking additional product images. We’ll inform you in case of any visual\ndamages to the product."
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="10sp"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/secondPhoto"
                android:layout_width="64dp"
                android:layout_height="65dp"
                android:layout_marginRight="40dp"

                android:src="@drawable/additional_image"/>

            <ImageView
                android:id="@+id/thirdPhoto"
                android:layout_width="64dp"
                android:layout_height="65dp"


                android:src="@drawable/additional_image"/>



        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>