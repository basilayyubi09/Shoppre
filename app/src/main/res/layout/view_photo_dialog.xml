<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/viewPhotoCloseBtn"
                android:layout_width="16dp"
                android:layout_height="22dp"
                android:layout_gravity="right"
                android:layout_marginTop="7dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/cross" />

            <ImageView
                android:id="@+id/mainPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/view_photo_blurred" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/unlockPhotoBtn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:backgroundTint="#17B28F"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:letterSpacing="0.03"
                android:lineHeight="14sp"
                android:paddingHorizontal="13dp"
                android:text="Unlock Photo for ₹5.00 "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="12sp"
                app:cornerRadius="5dp" />

            <TextView
                android:id="@+id/orText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="OR"
                android:textColor="#3A5FD8"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/requestText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="13dp"
                android:text="Request Additional Photos"
                android:textColor="#3A5FD8"
                android:textFontWeight="500"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/popUpAdditionalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginBottom="22dp"
                android:text="Additional inspections are done while taking additional product images. We’ll inform you in case of any visual damages to the product."
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="10sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/secondPhoto"
                android:layout_width="64dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/additional_image"/>

            <ImageView
                android:id="@+id/thirdPhoto"
                android:layout_width="64dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/additional_image"/>

            <ImageView
                android:id="@+id/fourthPhoto"
                android:layout_width="64dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/additional_image"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>